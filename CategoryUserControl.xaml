<UserControl x:Class="Rus.CategoryUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rus"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Tag="{Binding Tag}" Background="black">
        <TextBlock Text="{Binding Name}" Foreground="white" FontSize="16"/>
        <Button Width="50" Height="30" x:Name="delete" Click="Delete" Style="{StaticResource button}">Удалить</Button>
    </Grid>
</UserControl>
